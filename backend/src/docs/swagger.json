{
  "swagger": "2.0",
  "info": {
    "title": "Telkom Sigma Technical Test",
    "description": "Telkom Sigma Technical Test API documentation lies here",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "authorization",
      "in": "header",
      "description": "Enter the token with the `Bearer: ` prefix, e.g. 'Bearer abcde12345'."
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ],
  "paths": {
    "/api/user/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["User"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User object that needs to be added",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "fullname": {
                  "type": "string"
                },
                "role": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "summary": "Login user",
        "tags": ["User"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User object that needs to be added",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user/logout": {
      "get": {
        "summary": "User Logout",
        "tags": ["User"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user": {
      "get": {
        "summary": "Get All Users",
        "tags": ["User"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/user/{username}": {
      "put": {
        "summary": "Update User Information by username",
        "tags": ["User"],
        "parameters": [
          {
            "in": "path",
            "name": "username",
            "type": "string",
            "required": true
          },
          {
            "name": "user",
            "in": "body",
            "description": "User object that want to be updated",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email"
                },
                "fullname": {
                  "type": "string"
                },
                "username": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "summary": "Delete User",
        "tags": ["User"],
        "parameters": [
          {
            "in": "path",
            "name": "username",
            "type": "string",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/event": {
      "get": {
        "summary": "Get All Events",
        "tags": ["Event"],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Create Event",
        "tags": ["Event"],
        "parameters": [
          {
            "name": "event",
            "in": "body",
            "description": "Event object that want to be updated. Date format: M/D/YYYY",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "date": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/event-user": {
      "post": {
        "summary": "Create Event related to User",
        "tags": ["Event"],
        "parameters": [
          {
            "name": "event",
            "in": "body",
            "description": "Event object that want to be updated. Date format: M/D/YYYY",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "event_id": {
                  "type": "number"
                }
              }
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/event/{id}": {
      "put": {
        "summary": "Update Event",
        "tags": ["Event"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "number",
            "required": true
          },
          {
            "name": "event",
            "in": "body",
            "description": "Event object that want to be updated. Date format: M/D/YYYY",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "date": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "summary": "Remove Event",
        "tags": ["Event"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "number",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}
